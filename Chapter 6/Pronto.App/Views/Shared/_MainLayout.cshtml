@model Pronto.App.Models.MainViewModelBase

<!doctype html>
<html lang="en">
<head>
    <base href="~/" />
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="GPT proof-of-concept">
    <meta name="author" content="Youbiquitous">
    <link rel="icon" href="/images/pronto-logo.png">
    @await RenderSectionAsync("adhoc_styles_top", required: false)

    <title>@Model.Title</title>
    <link href="/css/lib/bootstrap.min.css" rel="stylesheet">
    <link href="/css/lib/fa5pro.min.css" rel="stylesheet" />
    <link href="/css/lib/ybq/ybq-core.min.css" rel="stylesheet">
    <script src="/js/lib/jquery.min.js"></script>
    <script src="/js/lib/ybq/ybq-core.min.js"></script>

    <script src="~/_framework/blazor.server.js"></script>
    @await RenderSectionAsync("adhoc_scripts_top", required: false)
</head>

<body>
<div class="text-white p-2" style="background-color: #273347">
    @if (IsSectionDefined("adhoc_Header"))
    {
        @await RenderSectionAsync("adhoc_Header")
    }
    else
    {
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <a href="https://www.youbiquitous.net" target="_blank">
                    <img src="/images/ybq-xs.png" class="whiten" style="width: 40px;" />
                </a>
            </div>
            <div class="h4">@Model.Header</div>
            <img src="/images/chatgpt-logo.png" style="width: 40px;" />
        </div>
    }
</div>

    <div class="text-black w-100" style="background-color: #fdfdfd">
    @RenderBody()
</div>

    @await RenderSectionAsync("adhoc_scripts_bottom", required: false)
    @await RenderSectionAsync("adhoc_styles_bottom", required: false)
</body>
</html>